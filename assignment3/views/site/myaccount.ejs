<div class="products-section">
  <div class="products-container">
    <h2 class="section-title">MY ACCOUNT</h2>
    
    <div style="max-width: 800px; margin: 0 auto; background: white; padding: 40px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); text-align: center;">
      <div style="margin-bottom: 30px;">
        <div style="width: 100px; height: 100px; background-color: #000; color: white; border-radius: 50%; display: inline-flex; align-items: center; justify-content: center; font-size: 2.5rem; font-weight: 700; margin-bottom: 20px;">
          <%= user.name.charAt(0).toUpperCase() %>
        </div>
        <h3 style="font-size: 1.5rem; font-weight: 600; margin-bottom: 5px;"><%= user.name %></h3>
        <p style="color: #666;"><%= user.email %></p>
      </div>
      
      <div style="display: grid; gap: 15px; max-width: 400px; margin: 30px auto 0;">
        <a href="/" style="display: block; padding: 12px 30px; background-color: #000; color: #fff; text-decoration: none; font-weight: 600; letter-spacing: 1px; border-radius: 4px; transition: background-color 0.3s ease;">
          CONTINUE SHOPPING
        </a>
        <a href="/cart" style="display: block; padding: 12px 30px; background-color: white; color: #000; text-decoration: none; font-weight: 600; letter-spacing: 1px; border-radius: 4px; border: 2px solid #000; transition: all 0.3s ease;">
          VIEW CART
        </a>
        <a href="/logout" style="display: block; padding: 12px 30px; background-color: white; color: #dc3545; text-decoration: none; font-weight: 600; letter-spacing: 1px; border-radius: 4px; border: 2px solid #dc3545; transition: all 0.3s ease;">
          LOGOUT
        </a>
      </div>
    </div>
  </div>
</div>
