<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Products - BeDecor</title>
  <link rel="stylesheet" href="/stylesheets/main-style.css">
  <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@100;300;400;600;700&family=Lato:wght@300;400;700&family=Roboto+Slab:wght@700&display=swap" rel="stylesheet">
</head>
<body class="products-page">
  <!-- Header with Navigation -->
  <header class="main-header">
    <div class="header-overlay">
      <div class="header-content">
        <div class="logo">
          <img src="/images/assets/decor-logo-251db6.svg" alt="decor">
        </div>
        <nav class="main-nav">
          <ul class="nav-list">
            <li class="nav-item">
              <a href="/">HOME</a>
            </li>
            <li class="nav-item active">
              <a href="/products">PRODUCTS</a>
            </li>
            <li class="nav-item">
          </ul>
        </nav>
      </div>
    </div>
  </header>

  <div class="products-container">
    <div class="products-header">
      <h1>Our Products</h1>
    </div>

    <!-- Filters Section -->
    <div class="filters-section">
      <h3>Filter Products</h3>
      <form method="GET" action="/products" class="filters-form">
        <div class="filter-group">
          <label for="category">Category</label>
          <select name="category" id="category">
            <option value="">All Categories</option>
            <% categories.forEach(function(cat) { %>
              <option value="<%= cat %>" <%= selectedCategory === cat ? 'selected' : '' %>><%= cat %></option>
            <% }); %>
          </select>
        </div>
        <div class="filter-group">
          <label for="minPrice">Min Price</label>
          <input type="number" name="minPrice" id="minPrice" placeholder="0" value="<%= minPrice %>" step="0.01">
        </div>
        <div class="filter-group">
          <label for="maxPrice">Max Price</label>
          <input type="number" name="maxPrice" id="maxPrice" placeholder="1000" value="<%= maxPrice %>" step="0.01">
        </div>
        <button type="submit" class="btn-filter">Apply Filters</button>
        <a href="/products" class="btn-clear">Clear</a>
      </form>
    </div>

    <!-- Products Grid -->
    <% if (products.length > 0) { %>
      <div class="products-grid">
        <% products.forEach(function(product) { %>
          <div class="product-card">
            <% if (product.image) { %>
              <img src="<%= product.image %>" alt="<%= product.name %>" class="product-image" onerror="this.src='https://via.placeholder.com/300x250?text=No+Image'">
            <% } else { %>
              <img src="https://via.placeholder.com/300x250?text=No+Image" alt="<%= product.name %>" class="product-image">
            <% } %>
            <div class="product-info">
              <% if (product.category) { %>
                <div class="product-category"><%= product.category %></div>
              <% } %>
              <div class="product-name"><%= product.name %></div>
              <div class="product-price">$<%= product.price.toFixed(2) %></div>
              <% if (product.description) { %>
                <div class="product-description"><%= product.description %></div>
              <% } %>
              <a href="/add-cart/<%= product._id %>" class="btn-add-cart">Add to Cart</a>
            </div>
          </div>
        <% }); %>
      </div>

      <!-- Pagination -->
      <div class="pagination">
        <% 
          function buildQueryString(page, category, minPrice, maxPrice) {
            const params = [];
            params.push('page=' + page);
            if (category && category !== '') {
              params.push('category=' + encodeURIComponent(category));
            }
            if (minPrice && minPrice !== '') {
              params.push('minPrice=' + encodeURIComponent(minPrice));
            }
            if (maxPrice && maxPrice !== '') {
              params.push('maxPrice=' + encodeURIComponent(maxPrice));
            }
            return '/products?' + params.join('&');
          }
        %>
        <% if (currentPage > 1) { %>
          <a href="<%= buildQueryString(currentPage - 1, selectedCategory, minPrice, maxPrice) %>" class="pagination-btn">Previous</a>
        <% } else { %>
          <span class="pagination-btn disabled">Previous</span>
        <% } %>

        <span class="pagination-info">
          Page <%= currentPage %> of <%= totalPages %> (<%= totalProducts %> products)
        </span>

        <% if (currentPage < totalPages) { %>
          <a href="<%= buildQueryString(currentPage + 1, selectedCategory, minPrice, maxPrice) %>" class="pagination-btn">Next</a>
        <% } else { %>
          <span class="pagination-btn disabled">Next</span>
        <% } %>
      </div>
    <% } else { %>
      <div class="no-products">
        <p>No products found. Try adjusting your filters.</p>
      </div>
    <% } %>
  </div>
</body>
</html>

