<div class="products-section">
  <div class="products-container">
    <h2 class="section-title">LOGIN</h2>
    
    <div style="max-width: 500px; margin: 0 auto; background: white; padding: 40px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
      <form action="" method="POST" style="display: grid; gap: 20px;">
        <div>
          <label style="display: block; margin-bottom: 5px; font-weight: 600; letter-spacing: 0.5px;">EMAIL</label>
        <input
          type="text"
          name="email"
          value="admin@admin.com"
            style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 4px; font-family: 'Josefin Sans', sans-serif;"
            placeholder="your@email.com"
        />
      </div>
        
        <div>
          <label style="display: block; margin-bottom: 5px; font-weight: 600; letter-spacing: 0.5px;">PASSWORD</label>
        <input
          type="password"
          name="password"
          value="admin"
            style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 4px; font-family: 'Josefin Sans', sans-serif;"
            placeholder="Enter your password"
        />
      </div>
        
        <button type="submit" style="padding: 12px 30px; background-color: #000; color: #fff; border: none; font-weight: 600; letter-spacing: 1px; border-radius: 4px; cursor: pointer; transition: background-color 0.3s ease; margin-top: 10px;">
          LOGIN
        </button>
        
        <p style="text-align: center; margin-top: 10px; color: #666;">
          Don't have an account? <a href="/register" style="color: #000; font-weight: 600; text-decoration: none;">Register here</a>
        </p>
      </form>
    </div>
  </div>
</div>
