  <script>
    // Hero Tabs Functionality
    const heroTabs = document.querySelectorAll('.slider-tabs .tab');
    const heroSlides = document.querySelectorAll('.hero-slide');
    let currentHeroSlide = 0;

    function showHeroSlide(index) {
      // Remove active from all tabs and slides
      heroTabs.forEach(tab => tab.classList.remove('active'));
      heroSlides.forEach(slide => slide.classList.remove('active'));
      
      // Add active to selected
      heroTabs[index].classList.add('active');
      heroSlides[index].classList.add('active');
      
      // Update content visibility
      const slideContent = document.querySelector('.slide-content');
      if (index === 1) {
        slideContent.style.opacity = '1';
      } else {
        slideContent.style.opacity = '0';
      }
      
      currentHeroSlide = index;
    }

    // Click event on tabs
    heroTabs.forEach((tab, index) => {
      tab.addEventListener('click', () => {
        showHeroSlide(index);
      });
      
      // Optional: Hover effect
      tab.addEventListener('mouseenter', () => {
        showHeroSlide(index);
      });
    });

    // Initialize
    showHeroSlide(0);
  </script>

