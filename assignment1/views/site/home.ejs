  <script>
    // Quote Slider with proper horizontal sliding
    const slides = document.querySelectorAll('.quote-slide');
    const dots = document.querySelectorAll('.quote-dots .dot');
    let currentSlide = 0;

    function showSlide(newIndex) {
      // Remove all position classes
      slides.forEach(slide => {
        slide.classList.remove('show-0', 'show-1', 'show-2', 'active');
      });
      
      // Add the appropriate class to position all slides
      slides.forEach(slide => {
        slide.classList.add(`show-${newIndex}`);
      });
      
      slides[newIndex].classList.add('active');
      
      // Update dots
      dots.forEach(dot => dot.classList.remove('active'));
      dots[newIndex].classList.add('active');
      
      currentSlide = newIndex;
    }

    // Initialize first slide
    showSlide(0);

    // Add click event to dots
    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        if (index !== currentSlide) {
          showSlide(index);
        }
      });
    });

    // Auto-advance slider every 5 seconds
    setInterval(() => {
      const nextSlide = (currentSlide + 1) % slides.length;
      showSlide(nextSlide);
    }, 5000);
  </script>

